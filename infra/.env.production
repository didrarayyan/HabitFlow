# Production Environment Configuration
# This file contains production environment variables
# Make sure to update all values before deploying to production

# Database Configuration
POSTGRES_SERVER=your-postgres-host
POSTGRES_USER=habitflow_prod
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=habitflow_prod
POSTGRES_PORT=5432
USE_SQLITE=false

# Security - IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-min-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins - Update with your production domains
BACKEND_CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379

# Email Configuration
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your-email-app-password
EMAILS_FROM_EMAIL=noreply@your-domain.com
EMAILS_FROM_NAME=HabitFlow

# Google API Configuration
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_SHEETS_CREDENTIALS_FILE=/app/credentials/google-credentials.json

# Admin User
FIRST_SUPERUSER=admin@your-domain.com
FIRST_SUPERUSER_PASSWORD=your-secure-admin-password

# Application Settings
PROJECT_NAME=HabitFlow
VERSION=1.0.0
API_V1_STR=/api/v1

# Production Settings
TESTING=false
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

